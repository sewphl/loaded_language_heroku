<%=flash.notice %>
<% content_for :head do %>
  <%= javascript_include_tag 'words' %>
<% end %>

<%= form_for(@word) do |f| %>
  <label>Word:</label><br>
  <%= f.hidden_field :user_id %>
  <%= f.text_field :entry %><br>
  <label>How loaded is it?</label><br>
    <%= range_field(:word, :loaded_rating, in: 1..9, step: 0.1) %>
    <%= f.submit action_name == 'new' ? 'Add Word' : 'Update Word'%>

<% end %>
