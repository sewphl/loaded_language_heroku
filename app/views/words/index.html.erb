<%=flash.notice %>

<h3>Most recently added words</h3>
<ul>
  <%@recent_words.each do |r|%>
    <li><%=link_to r.entry, r%> <br>
    added <%=create_day(r)%>, at <%=create_time(r)%>
  <%end%>
</ul>

<h3>Current top 10 most loaded words</h3>

<ul>
  <%@top10.each do |t| %>
    <li><%=link_to t.entry, t%> (<%=compute_avg(t).to_s%>) <br></li>
  <%end%>
</ul>



<h3>All words</h3>
<ul>
  <% @words_.each do |w| %>
    <li><%= link_to w.entry, w %></li>
  <% end %>
</ul>

<%=link_to('Home', root_path)%><br>
<%= link_to('Log in', login_path) %> or <%= link_to('Sign up', signup_path)%><br>
<%if logged_in?%>
  <%= link_to("Edit my info", user_path(@user))%><br>
<%end%>
<% if logged_in?%>
    <%=link_to("View all of your words", user_words_path(@user))%><br>
<%end%>
<%if logged_in?%>
  <%= link_to "Log out", logout_path, method: :delete %><br>
<%end%>
