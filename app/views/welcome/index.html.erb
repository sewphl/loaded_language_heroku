<%= flash[:notice]%>

<% if session[:user_id] %>
  <h1><%= @user.name %></h1>
  <h2>Email: <%= @user.email %></h2>

<% else %>
  <%= link_to('Log in with Google!', '/auth/google') %>
<% end %>

<%=link_to "View full database of words", words_path%><br>

<% if logged_in?%>
    <%=link_to "View all of your words", user_words_path(current_user.id)%><br>
<%end%>

<br>
<%if logged_in?%>
  <%= link_to "Log out", logout_path, method: :delete %>
<%end%>
